<div class="panel panel-default">
    <div class = "panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
          <span class="label label-info"><%= message.name %></span>
          <%= message.body %>
          <br>
        <% end %>
    </div>
</div>

<%= form_for(@message) do |f| %>
<label for="inputContent" class="col-md-2 control-label">名前:</label>
<div class="col-md-10">
    <%= f.text_field :name %>
</div>
   
<label for="inputContent" class="col-md-2 control-label">内容:</label>
<div class="col-md-10">
    <%= f.text_area :body, :size => "20x5" %>
</div>

<%= f.submit class: "btn btn-sm btn-primary" %>
   
<% end %>
